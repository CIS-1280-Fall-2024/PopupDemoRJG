<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PopupDemo.AlertDemoPage"
             Title="AlertDemoPage">
    <VerticalStackLayout>
        <Label 
            Text="Alert Demo"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button x:Name="btnShowAlert" Text="Show alert" Clicked="btnShowAlertClickedAsync" />
    
        <Label 
                Text="Confirm Dialog Demo"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

        <Button x:Name="btnShowConfirmDialog" Text="Show Confirm Dialog" Clicked="btnShowConfirmDialogClickedAsync" />
    </VerticalStackLayout>
</ContentPage>