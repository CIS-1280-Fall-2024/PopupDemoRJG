<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PopupDemo.ActionSheetDemoPage"
             Title="ActionSheetDemoPage">
    <VerticalStackLayout>
        <Label 
            Text="Action sheet demo"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="btnDisplayActionSheet" Text="Display action sheet" Clicked="BtnDisplayActionSheetClickedAsync"/>

        <Label 
             Text="Action sheet demo with delete"
             VerticalOptions="Center" 
             HorizontalOptions="Center" />
        <Button x:Name="btnDisplayActionSheetWithDelete" Text="Display action sheet with delete" Clicked="BtnDisplayActionSheetWithDeleteClickedAsync"/>
    </VerticalStackLayout>
</ContentPage>