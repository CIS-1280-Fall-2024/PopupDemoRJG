<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PopupDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PopupDemo"
    Shell.FlyoutBehavior="Locked"
    Title="PopupDemo">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Alert Demo"
        ContentTemplate="{DataTemplate local:AlertDemoPage}"
        Route="AlertDemoPage" />
    <ShellContent
        Title="ActionSheet Demo"
        ContentTemplate="{DataTemplate local:ActionSheetDemoPage}"
        Route="ActionSheetDemoPage" />
    <ShellContent
        Title="Display Prompt Demo"
        ContentTemplate="{DataTemplate local:DisplayPromptDemoPage}"
        Route="DisplayPromptDemoPage" />
    <ShellContent
        Title="Display Custom Dialog Demo"
        ContentTemplate="{DataTemplate local:CustomDialogDemoPage}"
        Route="CustomDialogDemoPage" />
    <ShellContent
        Title="Display To Do Demo"
        ContentTemplate="{DataTemplate local:ToDoListPage}"
        Route="ToDoListPage" />
</Shell>
