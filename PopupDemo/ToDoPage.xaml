<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PopupDemo.ToDoPage"
             Title="ToDoPage">
    <VerticalStackLayout>
        <Label 
            Text="To Do Form"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text ="Task"/>
        <Entry x:Name="entryTask" Placeholder="Please enter task" />

        <Button x:Name="btnAddTask" Text="Add Task" Clicked="btnAddTaskClickedAsync"/>
    </VerticalStackLayout>
</ContentPage>